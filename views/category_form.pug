extends layout

block content
    h1 #{title}

    form(action='' method='POST')
        .form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Weapons, Potions, Armor, etc' name='name')
            label(for='description') Description:
            textarea#description(rows="10")
        button#submit Submit
    
    if errors
       ul
        for error in errors
            li!= error.msg 
        