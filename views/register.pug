extends layout

block content
    h1 Create a New User
    form(action='' method='POST')
        label(for='name') Name:
        input#name.form-control(type='text' name='name' required)
        label(for='email') Email:
        input#email.form-control(type='text' name='email')
        label(for='password') Password:
        input#password.form-control(type='password' name='password' required)
        button Register
    
    br
    p Already have an account? Sign-in 
        a(href='/login') here.
    