extends layout

block content
    .header
        h1 #{title}
        if currentUser
            a(href=itemcopy.url + '/update') Update Item Copy
            a(href=itemcopy.url + '/delete') Delete Item Copy

    .item-detail
        h2 #{itemcopy.item.name} (#{itemcopy.item.rarity})
        .main
            .img
                img(src=itemcopy.imageURL)
                
            .content
                p #{itemcopy.item.description}
                p #[strong Inventory ID: ] #{itemcopy.id}

                p #[strong Unit weight: ] #{itemcopy.weight}
                p #[strong Unit price:  ] #{itemcopy.price}
                if itemcopy.item.damage 
                p #[strong Damage: ] #{itemcopy.item.damage}
    
    .foot     
        a(href='/store/itemcopies') << Back to item copies
    

    